{
  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },

  // diagnostics
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "float",
  "diagnostic.virtualText": false,

  // codelens
  // "codeLens.enable": true,

  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    //"css",
    //"markdown",
    //"javascript",
    //"graphql",
    //"html",
    //"yaml",
    //"json",
    //"python",
    //"java"
  ],

  // pyright conda setup
  "python.pythonPath": "~/.config/nvim/conda.py",

  // python config
  "pyright.enable": true,
  "python.analysis.diagnosticMode": "workspace",
  "pyright.disableDiagnostics": false,
  "pyright.disableCompletion": false,
  
  // format prompt: `pip install flake8`
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120", "--ignore=E124,E126,W504,F401"],

  // format content: `pip install yapf`
  "python.formatting.provider": "yapf",
  "python.formatting.yapfPath": "yapf",
  "python.formatting.yapfArgs": ["--style={based_on_style: google, column_limit: 120}"],

  // format header
  "pyright.organizeimports.provider": "isort",
  "python.sortImports.path": "isort",
  "python.sortImports.args": ["--balanced", "--multi-line=0", "--line-length=120"],

  // clangd
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd"
}
